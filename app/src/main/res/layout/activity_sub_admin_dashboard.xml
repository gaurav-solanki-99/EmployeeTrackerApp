<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/blue2"
            android:orientation="horizontal"
            android:id="@+id/llheader"/>
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_centerHorizontal="true"

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_height="70dp"
            android:src="@drawable/employeeprofile"
            app:civ_border_width="3dp"
            app:civ_border_color="@color/white"/>
        <LinearLayout
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lladminname"
             android:layout_marginLeft="15dp"
           android:layout_toRightOf="@+id/profile_image"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jack Nickolson"
                android:id="@+id/tvadminname"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                />
            <TextView
                android:id="@+id/tvdepartment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Managing Director"
                android:textColor="#C1FFFFFF"
                android:textSize="15sp"
                />

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="-30dp"

            android:id="@+id/llcardbtn"
            android:layout_below="@+id/llheader"
            android:layout_width="250dp"
            app:cardElevation="5dp"
             android:layout_centerInParent="true"
            app:cardCornerRadius="20dp"
            android:layout_height="80dp">


            <LinearLayout
               android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"

                android:orientation="horizontal">


                   <LinearLayout
                       android:id="@+id/llworklogin"
                       android:layout_width="wrap_content"
                        android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       >
                       <ImageView
                           android:layout_width="25dp"
                           android:layout_height="25dp"
                           android:src="@drawable/ic_baseline_power_settings_new_24"
                           android:layout_gravity="center_horizontal"
                           />
                       <TextView
                           android:id="@+id/worklogin"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:padding="5dp"
                           android:text="Log in"
                           android:textSize="15sp"
                           android:layout_gravity="center_horizontal"
                         />
                   </LinearLayout>






            <LinearLayout
                android:id="@+id/llworkbreak"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/breakicons"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                     />

                    <TextView
                        android:id="@+id/workbreak"
                        android:layout_marginLeft="10dp"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Break"
                        android:visibility="visible"
                        android:textSize="15sp"
                        android:layout_marginRight="10dp"

                        />
            </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <!--    <ImageView-->
        <!--        android:layout_marginTop="10dp"-->
        <!--        android:id="@+id/btnaddTempEmp"-->
        <!--        android:layout_weight="1"-->
        <!--        android:layout_width="30dp"-->
        <!--        android:layout_below="@+id/llcardbtn"-->
        <!--        android:layout_height="30dp"-->
        <!--        android:layout_alignParentRight="true"-->
        <!--        android:layout_marginRight="50dp"-->
        <!--        android:src="@drawable/ic_baseline_add_circle_outline_24"-->
        <!--        app:tint="@color/gray" />-->

<!--        <TextView-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:layout_marginLeft="25dp"-->
<!--            android:textColor="@color/gray"-->
<!--            android:textSize="20sp"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Employee Statistics"-->
<!--            android:id="@+id/tvpersonalstatics"-->
