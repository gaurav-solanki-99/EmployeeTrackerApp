<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-10dp"
        android:scaleType="fitXY"

        android:src="@drawable/headerfinalimage" />

    <TextView
        android:id="@+id/tvdigname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digiholic \n   Infotech"
        android:textSize="30dp"
        android:layout_below="@id/image1"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"

        />

    <LinearLayout
        android:id="@+id/llform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_below="@id/tvdigname"

        >




        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:id="@+id/tvphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            app:hintTextColor="@color/blue2"
            app:boxStrokeColor="@color/blue2"
            android:textColorHint="@color/blue2"
            app:boxStrokeWidth="1dp"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="@color/gray"
                android:maxLength="10"
                android:textCursorDrawable="@drawable/textcursorbackground"
                android:id="@+id/etphone"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="25dp"
            android:id="@+id/tvPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"

            app:boxStrokeColor="@color/blue2"
            android:textColorHint="@color/blue2"
            app:hintTextColor="@color/blue2"
            app:boxStrokeWidth="1dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/blue2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/gray"
                android:textCursorDrawable="@drawable/textcursorbackground" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvforgetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:text="Forget Password ? "
            android:textColor="@color/blue"
            android:textSize="10sp"

            />

        <TextView
            android:id="@+id/btnemplogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/signinbutton"
            android:padding="5dp"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />







    </LinearLayout>
    <ImageView
        android:layout_marginTop="90dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logonormal"
        android:layout_marginLeft="25dp"
        android:rotation="30"
        />

    <ImageView


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/footerimage"

        android:layout_below="@id/llform"
        />







</RelativeLayout>