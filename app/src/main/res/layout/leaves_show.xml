<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout

           android:id="@+id/leavesheader"
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:background="@drawable/headeradmindashboard"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Leaves"
               android:textColor="@color/white"
               android:textSize="50sp"
               android:fontFamily="sans-serif-black"
               android:layout_gravity="center"
               android:layout_marginTop="20dp"

               />
           <LinearLayout
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_horizontal"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Total Leaves : "
                   android:textSize="20sp"
                   android:textColor="@color/black"

                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="15"
                   android:id="@+id/tvtotalleaves"
                   android:textSize="18sp"
                   android:textColor="#D50000"

                   />

           </LinearLayout>

       </LinearLayout>
       <ImageView
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:src="@drawable/ic_baseline_arrow_back_24"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:id="@+id/backhomebutton"
           />

       <ImageView
           android:layout_width="45dp"
           android:layout_height="45dp"
           android:layout_alignParentRight="true"
           android:src="@drawable/ic_baseline_add_24"
           android:layout_marginTop="10dp"
           android:layout_marginRight="10dp"
           android:id="@+id/addleavebutton"
           />

       <LinearLayout

           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           android:layout_below="@+id/leavesheader"
           android:layout_marginTop="-50dp"
           android:layout_width="match_parent"
           android:weightSum="2"

           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <androidx.cardview.widget.CardView
               android:layout_width="0dp"
               android:layout_weight="1"
               app:cardElevation="10dp"
               android:layout_marginBottom="5dp"
               android:layout_height="150dp"
               app:cardCornerRadius="20dp"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_marginTop="20dp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textSize="35sp"
                       android:layout_marginTop="20dp"
                      android:layout_gravity="center_horizontal"
                       android:textColor="@color/black"
                       android:id="@+id/tvannualleaves"
                       android:textStyle="bold"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Annual"
                       android:textSize="20sp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center_horizontal"
                       android:textColor="@color/blue2"
                       android:textStyle="bold"/>


               </LinearLayout>





           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:layout_marginLeft="20dp"
               android:layout_width="0dp"
               android:layout_weight="1"
               app:cardElevation="10dp"
               android:layout_marginBottom="5dp"
               android:layout_height="150dp"
               app:cardCornerRadius="20dp"
               >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:layout_marginTop="20dp"
                   >
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="0"
                       android:textSize="35sp"
                       android:layout_marginTop="20dp"
                       android:layout_gravity="center_horizontal"
                       android:textColor="@color/black"
                       android:id="@+id/tvmonthleaves"
                       android:textStyle="bold"/>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Month"
                       android:textSize="20sp"
                       android:layout_marginTop="10dp"
                       android:layout_gravity="center_horizontal"
                       android:textColor="@color/blue"
                       android:textStyle="bold"/>


               </LinearLayout>




           </androidx.cardview.widget.CardView>

       </LinearLayout>


   </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leaves Request"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leavesrv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>